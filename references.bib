pmid = {22232689},
title = {{Homeostatic plasticity mechanisms are required for juvenile, but not adult, ocular dominance plasticity.}},
url = {http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=3268335\&tool=pmcentrez\&rendertype=abstract},
volume = {109},

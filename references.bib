volume = {30},
year = {2010}
}
@article{Stellwagen2005,
abstract = {The proinflammatory cytokine tumor necrosis factor-alpha (TNFalpha) causes a rapid exocytosis of AMPA receptors in hippocampal pyramidal cells and is constitutively required for the maintenance of normal surface expression of AMPA receptors. Here we demonstrate that TNFalpha acts on neuronal TNFR1 receptors to preferentially exocytose glutamate receptor 2-lacking AMPA receptors through a phosphatidylinositol 3 kinase-dependent process. This increases excitatory synaptic strength while changing the molecular stoichiometry of synaptic AMPA receptors. Conversely, TNFalpha causes an endocytosis of GABA(A) receptors, resulting in fewer surface GABA(A) receptors and a decrease in inhibitory synaptic strength. These results suggest that TNFalpha can regulate neuronal circuit homeostasis in a manner that may exacerbate excitotoxic damage resulting from neuronal insults.},
author = {Stellwagen, David and Beattie, Eric C and Seo, Jae Y and Malenka, Robert C},

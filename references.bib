@article{Turrigiano2000,
abstract = {The positive-feedback nature of Hebbian plasticity can destabilize the properties of neuronal networks. Recent work has demonstrated that this destabilizing influence is counteracted by a number of homeostatic plasticity mechanisms that stabilize neuronal activity. Such mechanisms include global changes in synaptic strengths, changes in neuronal excitability, and the regulation of synapse number. These recent studies suggest that Hebbian and homeostatic plasticity often target the same molecular substrates, and have opposing effects on synaptic or neuronal properties. These advances significantly broaden our framework for understanding the effects of activity on synaptic function and neuronal excitability.},

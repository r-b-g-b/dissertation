journal = {Proceedings of the National Academy of Sciences of the United States of America},
keywords = {Age Factors,Analysis of Variance,Animals,Calcium-Calmodulin-Dependent Protein Kinase Type 2,Dominance,Electrophysiology,Homeostasis,Homeostasis: physiology,Inbred C57BL,Knockout,Mice,Neuronal Plasticity,Neuronal Plasticity: physiology,Ocular,Ocular: physiology,Phosphorylation,Tumor Necrosis Factor-alpha,Tumor Necrosis Factor-alpha: genetics,Visual Cortex,Visual Cortex: physiology},
month = jan,
